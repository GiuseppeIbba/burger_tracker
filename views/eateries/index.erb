<% @eateries.each do |eatery| %>
<p><h4><%= eatery.name() %> - <%= eatery.location() %></h4></p>
<div>
  <form method="get" action="/eateries/<%= eatery.id %>/show">
    <input type="submit" value="Check Our Burgers"/>
  </form>
</div>

  <div>
    <form method="get" action="/eateries/<%= eatery.id %>/edit">
      <input type="submit" value="Edit Eatery"/>
    </form>
  </div>

  <div>
    <form method="post" action="/eateries/<%= eatery.id %>/delete">
      <input type="submit" value="Delete Eatery"/>
    </form>
  </div>

<hr />
<% end %>
