  <% @eateries.each do |eatery| %>
  <h2><%= eatery.name() %> - <%= eatery.location() %></h2>


  <form action="/eateries/<%= eatery.id %>" method="get">
    <button type="submit" value="Check Our Burgers" class="mbutton" style="text-decoration:none">Check Our Burgers</button>
  </form>
  <form action="/eateries/<%= eatery.id %>/edit" method="get">
    <button type="submit" value="Edit Eatery" class="mbutton" style="text-decoration:none">Modify Eatery</button>
  </form>
  <form action="/eateries/<%= eatery.id %>/delete" method="post">
    <button type="submit" value="Delete Eatery" class="mbutton" style="text-decoration:none">Delete Eatery</button>
  </form>


<hr />
<% end %>
<hr />
